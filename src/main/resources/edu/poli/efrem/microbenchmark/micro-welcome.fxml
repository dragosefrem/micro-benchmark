<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.poli.efrem.microbenchmark.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text fx:id="welcomeMessage" strokeType="OUTSIDE" strokeWidth="0.0" text="DragoÈ™'s Micro-Benchmark app" />
   <JFXButton fx:id="startButton" onAction="#onHelloButtonClick" text="Start Benchmark" />
   <ProgressBar fx:id="benchmarkProgress" prefWidth="200.0" progress="0.0" />
   <Label fx:id="statusText" text="Status:" />
   <JFXButton fx:id="showResultsButton" onAction="#onShowResultsButtonClick" text="Show Results" />
</VBox>
